<%= form_for(@shape) do |f| %>
	<% if @shape.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@shape.errors.count, "error") %> prohibited this shape from being saved:</h2>

			<ul>
			<% @shape.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<div class="fields">
		<div>
			<%= f.label :x %>
			<%= f.text_field :x %>
		</div>
		<div>
			<%= f.label :y %>
			<%= f.text_field :y %>
		</div>
		<% if type == "Circle" %>
		<div>
			<%= f.label :radius %>
			<%= f.text_field :radius %>
		</div>
		<% elsif type == "Rectangle" %>
		<div>
			<%= f.label :width %>
			<%= f.text_field :width %>
		</div>
		<div>
			<%= f.label :height %>
			<%= f.text_field :height %>
		</div>
		<% end %>
		<div><%= f.hidden_field :type, value: type %></div>
	</div>

	<div class="actions">
		<%= f.submit "Create #{type}" %>
	</div>
<% end %>
